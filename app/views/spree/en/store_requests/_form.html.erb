<% if @spree_store_request.errors.present? %>
  <% email_error = 'Email address ' + @spree_store_request.errors.messages[:email].first %>
  <% @spree_store_request.errors.clear %>
<% end %>
<div class="form-row">
  <div class="col-md-12 col-lg-12 col-sm-12 mb-3 p-0">
    <label for="validationCustom01">Contact Name *</label>
    <%= form.text_field :contact_name , class: "form-control",id: "validationCustom01", placeholder: "Enter Your Contact Name*", required: true%>
  </div>
  <div class="col-md-12 col-lg-12 col-sm-12 mb-3 p-0">
    <label for="validationCustom02">Contact Number *</label>
    <%= form.number_field :contact_number, class: "form-control",id: "validationCustom02", placeholder: "Provide a Contact Number*", required: true %>    
  </div>
  
  <div class="col-md-12 col-lg-12 col-sm-12 mb-3 p-0">
    <label for="validationCustom02">Email*</label>
    <%= form.email_field :contact_email_address , class: "form-control email_val", id: "validationCustom02",placeholder: "Enter Your Email Address", required: true%>
    <% if email_error.present? %>
      <small class="help-block custom_errors" data-bv-validator="identical" data-bv-result="INVALID" style="">
        <span style="color: red;"><%= email_error %></span>
      </small>
    <% end %>
  </div>
  
  <div class="col-md-12 col-lg-12 col-sm-12 mb-3 p-0">
    <label for="validationCustom02">Store Name / Brand *</label>
    <%= form.text_field :store_name, class: "form-control", id: "validationCustom02", placeholder: "Tell Us The Name of Your Store or Brand*" , required: true%>    
  </div>
  
  <div class="col-md-12 col-lg-12 col-sm-12 mb-3 p-0">
    <label for="">Website</label>
    <%= form.text_field :store_web_url , class: "form-control", id: "",placeholder: "Enter Your Website Address if You Have One "%>      
  </div>
  
  <div class="col-md-12 col-lg-12 col-sm-12 mb-3 p-0">
    <label for="validationCustom02">Social Media</label>
     <%= form.text_field :store_social_media , class: "form-control",id: "validationCustom02", placeholder: "Enter A Social Media Account if You Have One"%> 
     <%= hidden_field_tag "lang", "en" %>      
  </div>

  
</div>


